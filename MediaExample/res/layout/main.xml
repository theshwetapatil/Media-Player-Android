<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/hello"
    />
<Button android:text="Play" android:id="@+id/b1" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
<Button android:text="Pause" android:id="@+id/b2" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
<Button android:text="Stop" android:id="@+id/b3" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
<ProgressBar style="?android:attr/progressBarStyleHorizontal" android:layout_height="wrap_content" android:id="@+id/pb1" android:layout_width="match_parent"></ProgressBar>
</LinearLayout>
